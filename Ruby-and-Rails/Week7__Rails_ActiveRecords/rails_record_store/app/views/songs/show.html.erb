<h1>Song: <%=@song.name%></h1>
<h2>Album: <%=@album.name%></h2>
<h3><%=@song.lyrics%></h3>
<p><%= link_to 'Edit song', edit_album_song_path(@album, @song) %></p>
<p><%= link_to 'Delete song', 
              album_songs_path(@album, @song),
              data: { 
                confirm: 'Are you sure?',
                method: 'Delete' 
              } %></p>
