<h1>Tournament # <%= @tournament.id %></h1>
<div class="round">
  <% @teams_names.each_slice(2) do |name1, name2| %>
    <div class="round__match">
      <div class="round__team">
        <%= name1 %>
      </div>
      <div class="round__team">
        <%= name2 %>
      </div>
    </div>
  <% end %>
</div>
