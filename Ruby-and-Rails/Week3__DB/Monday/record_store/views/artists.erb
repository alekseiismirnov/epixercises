<h1>Artists</h1>

<% if @artists.any? %>
<div class="artists">
  <% @artists.each do |artist| %>
    <div class="artist">
      <a href="/artists/<%=artist[:id]%>">
        <%=artist[:name]%>
      </a>
    </div>
  <% end %>
</div>
<% else %>
<div class="nothing">
  Nobody to show
</div>
<% end %>
<a href="/artists/new">New Artist</a>