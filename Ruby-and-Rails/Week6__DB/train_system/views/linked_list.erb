<div class="container">
<table class="table table-striped <%=@list_class%>">
  <tbody>
    <% @items.each do |item| %>
      <tr class="<%=@item_class%>">
        <td class="col">
          <a href="<%=item[:url]%>">
            <%=item[:text]%>
          </a>
        </td>
        <td>
          <form action="<%=item[:url]%>/edit" method="get">
            <button type="submit" class="btn btn-sm btn-primary">Edit</button>
          </form>
        </td>
        <td>
          <form action="<%=item[:url]%>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>